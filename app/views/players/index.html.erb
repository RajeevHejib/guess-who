<% if !user_signed_in? %>
  <h1 id="header">Welcome to Guess Who</h1>
  <div class="btn btn-primary btn-lg" id="signin" >
    <%= link_to "Sign in", new_user_session_path %>
  </div>
  <div class="btn btn-primary btn-lg" id="signup">
    <%= link_to "Sign up", new_user_registration_path %>
  </div>
<% else %>
<br>
  <% if @players.count == 0 %>
    <h1>No players yet! Please add some by filling in the form</h1>
  <% else %>
      <%= link_to 'Start Game', games_path %>
  <% end %>
<% end %>
