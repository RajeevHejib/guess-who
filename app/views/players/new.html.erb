<%= form_for @player, html: {multipart: true} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.file_field :image %>
  <%= f.label :gender %>
  <%= f.select :gender, ['Male', 'Female'] %>
  <%= f.label :age %>
  <%= f.text_field :age %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :nationality %>
  <%= f.text_field :nationality %>
  <%= f.label :no_of_friends %>
  <%= f.text_field :no_of_friends %>
  <%= f.label :marital_status %>
  <%= f.select :marital_status, ['Single', 'Married', 'In a relationship'] %>
  <%= f.submit %>
<% end %>
